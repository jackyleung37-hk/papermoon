{
  "manifest_version": 3,
  "name": "Financial Dashboard",
  "version": "1.0",
  "description": "Real-time prices for JPY/HKD, TQQQ, SOXL, NET, BTC, ETH",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://api.exchangerate-api.com/*",
    "https://query1.finance.yahoo.com/*",
    "https://api.coingecko.com/*"
  ]
}
